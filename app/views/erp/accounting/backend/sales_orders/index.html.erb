<% content_for :title do %>
    <%= t('.sales_orders') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-file-text"></i> <%= t('.sales_orders') %>
<% end %>

<% content_for :global_filter do %>
    <div class="row top-datalist">
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'customer',
                label: t('.filter_customer'),
                placeholder: t('.choose_customer'),
                url: erp_contacts.dataselect_backend_contacts_path(format: 'json', is_customer: true),
            }) %>
        </div>
    </div>
<% end %>

<%= erp_datalist(
    url: erp_accounting.sales_orders_list_backend_sales_orders_path,
    keywords: [
        {
            text: t('.order_code'), name: 'erp_orders_orders.code'
        },
        {
            text: t('.employee'),
            name: 'erp_users.name',
            select: {
                name: 'erp_orders_orders.employee_id',
                data_url: erp.dataselect_backend_users_path
            }
        },
        {
            text: t('creator'),
            name: 'erp_users.name',
            select: {
                name: 'erp_users.id',
                data_url: erp.dataselect_backend_users_path
            }
        }
    ],
    actions: [
        
    ],
    filters: [
        {
            text: t('.overdue'), name: 'cache_payment_status', value: Erp::Orders::Order::PAYMENT_STATUS_OVERDUE, checked: true
        },
        {
            text: t('.paid'), name: 'cache_payment_status', value: Erp::Orders::Order::PAYMENT_STATUS_PAID, checked: false
        },
        {
            text: t('.debt'), name: 'cache_payment_status', value: Erp::Orders::Order::PAYMENT_STATUS_DEBT, checked: false
        },
        {
            text: t('.overpaid'), name: 'cache_payment_status', value: Erp::Orders::Order::PAYMENT_STATUS_OVERPAID, checked: false
        }
    ],
    columns: [
        {
            text: t('.order_code'), name: 'order_code', value: true, checked: true
        },
        {
            text: t('.customer'), name: 'customer', value: true, checked: true
        },
        {
            text: t('.total'), name: 'total', value: true, checked: true
        },
        {
            text: t('.paid'), name: 'paid', value: true, checked: false
        },
        {
            text: t('.remain'), name: 'remain', value: true, checked: true
        },
        {
            text: t('.order_date'), name: 'order_date', value: true, checked: true
        },
        {
            text: t('.debt_deadline'), name: 'deadline', value: true, checked: false
        },
        {
            text: t('.status'), name: 'status', value: true, checked: true
        },
        {
            text: t('.employee'), name: 'employee', value: true, checked: false
        },
        {
            text: t('.creator'), name: 'creator', value: true, checked: false
        },
        {
            text: t('.created_at'), name: 'created_at', value: true, checked: false
        }
    ],
    sort: { sort_by: 'erp_orders_orders.order_date', sort_direction: 'desc' }
) %>