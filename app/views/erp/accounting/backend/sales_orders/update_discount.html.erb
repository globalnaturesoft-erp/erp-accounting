<% content_for :title do %>
    Cập nhật giảm giá
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-file-text"></i> Cập nhật giảm giá
<% end %>

<% content_for :page_toolbar do %>
<% end %>

<% content_for :global_filter do %>
    <div class="row top-datalist">
        <div class="col-md-3">
            <%= erp_form_control('date', {
                label: 'Từ ngày',
                name: 'from_date',
                value: (@filters[:from_date].present? ? @filters[:from_date].to_date : nil),
                placeholder: 'Chọn ngày'
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control('date', {
                label: 'Đến ngày',
                name: 'to_date',
                value: (@filters[:to_date].present? ? @filters[:to_date].to_date : nil),
                placeholder: 'Chọn ngày'
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control('dataselect', {
                label: 'Mốc thời gian',
                name: 'period',
                value: (@filters[:period].present? ? Erp::Periods::Period.find(@filters[:period]).id : nil),
                text: (@filters[:period].present? ? Erp::Periods::Period.find(@filters[:period]).name : nil),
                placeholder: 'Chọn khoảng thời gian',
                url: erp_periods.dataselect_backend_periods_path(format: 'json'),
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'customer',
                label: 'Khách hàng',
                placeholder: 'Chọn theo khách hàng',
                value: (@customer.present? ? @customer.id : nil),
                text: (@customer.present? ? @customer.name : nil),
                url: erp_contacts.dataselect_backend_contacts_path(format: 'json',
                    is_customer: true,
                    contact_id: Erp::Contacts::Contact.get_main_contact),
            }) %>
        </div>
    </div>
    <div class="row top-datalist">
        <div class="col-md-3">
            <%= erp_form_control("text", {
                name: 'discount_percent',
                label: 'Phần trăm giảm giá (%)',
                placeholder: 'Nhập phần trăm giảm giá'
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'categories',
                label: 'Chuyên mục sản phẩm',
                placeholder: 'Tất cả chuyên mục',
                url: erp_products.dataselect_backend_categories_path(format: 'json'),
                multiple: true
            }) %>
        </div>
        <div class="col-md-3">
            <%= erp_form_control("dataselect", {
                name: 'price_patient_states',
                label: 'Tình trạng bệnh nhân',
                placeholder: 'Tìm theo tình trạng BN',
                url: erp_ortho_k.dataselect_backend_patient_states_path(format: 'json'),
                multiple: true
            }) %>
        </div>        
    </div>
    <div class="row">
        <div class="col-md-3">
            <% diameter = Erp::Products::Property.where(name: "Đường kính").first %>
            <%= erp_form_control("dataselect", {
                name: 'diameters',
                label: 'Chọn đường kính',
                placeholder: diameter.name,
                url: erp_products.dataselect_backend_properties_values_path(format: 'json', property_id: diameter.id),
                include_blank: t('.all_diameters'),
                multiple: true
            }) %>
        </div>
        <div class="col-md-3">
            <% letter = Erp::Products::Property.where(name: "Chữ").first %>
            <%= erp_form_control("dataselect", {
                name: 'letters',
                label: 'Chữ',
                placeholder: letter.name,
                url: erp_products.dataselect_backend_properties_values_path(format: 'json', property_id: letter.id),
                include_blank: 'Tất cả chữ',
                multiple: true
            }) %>
        </div>
        <div class="col-md-3">
            <% number = Erp::Products::Property.where(name: "Số").first %>
            <%= erp_form_control("dataselect", {
                name: 'numbers',
                label: 'Số',
                placeholder: number.name,
                url: erp_products.dataselect_backend_properties_values_path(format: 'json', property_id: number.id),
                include_blank: 'Tất cả số',
                multiple: true
            }) %>
        </div>
        <div class="col-md-3 text-right mt-25">
            <a href="javascript:;" class="btn btn-primary global-filter-button">Tính giảm giá</a>
        </div>
    </div>
<% end %>

<%= erp_datalist(
    url: erp_accounting.update_discount_table_backend_sales_orders_path,
    autoload: false,
    placeholder: 'Vui lòng chọn vùng cần xem và nhấn Tính giảm giá'
) %>
